<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halaman2"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#e7f8f1">

    <ImageView
        android:layout_width="600px"
        android:layout_height="600px"
        android:src="@drawable/persegi_panjang"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:text="Persegi Panjang"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/inputLebar"
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:hint="Lebar"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:hint="Panjang"
        android:id="@+id/inputPanjang"
        android:inputType="number"/>
    <Button
        android:id="@+id/tombolhitungpp"
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:text="Hitung luas"
        android:backgroundTint="#c3eedd"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tampilhasilpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="di sini tampil hasil"
        android:textSize="15pt"/>

</LinearLayout>