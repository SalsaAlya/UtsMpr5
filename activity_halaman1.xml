<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1cba2"
    tools:context=".halaman1">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penghitung Luas"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10pt">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangun Datar"
                android:textSize="20sp"
                android:layout_margin="10pt">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200pt"
                android:src="@drawable/bg">

            </ImageView>

            <Button
                android:id="@+id/kepersegi_p"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:text="Persegi Panjang"
                android:backgroundTint="#7eaba6"
                android:textColor="@color/black"
                android:padding="10pt"/>

            <Button
                android:id="@+id/kepersegi"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:text="Persegi"
                android:backgroundTint="#7eaba6"
                android:textColor="@color/black"
                android:padding="10pt"/>

        </LinearLayout>



    </ScrollView>